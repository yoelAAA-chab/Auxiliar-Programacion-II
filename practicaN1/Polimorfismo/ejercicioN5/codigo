class Celular:
    def __init__(self, nroTel, dueño, espacio, ram, nroApp):
        self.nroTel = nroTel
        self.dueño = dueño
        self.espacio = espacio
        self.ram = ram
        self.nroApp = nroApp

    
    def __str__(self):
        return f"Celular del dueño {self.dueño}:\n" \
               f"  num de Teléfono: {self.nroTel}\n" \
               f"  espacio de almacenamiento: {self.espacio} GB\n" \
               f"  RAM: {self.ram} GB\n" \
               f"  Número de aplicaciones: {self.nroApp}"
    

    
    def __iadd__(self, other):
        if isinstance(other, int):
            self.nroApp=10+self.nroApp
        return self
    


    def __isub__(self, other):
        if isinstance(other, int):
            self.espacio -= 5
        return self


    def mostrarDatos(self):
        print(self)



celular1 = Celular("123", "agner", 32, 4, 50)


print("Datos iniciales del celular:")
celular1.mostrarDatos()


celular1=10+celular1


celular1= 5-celular1


print("\nDatos después de los operadores:")
celular1.mostrarDatos()

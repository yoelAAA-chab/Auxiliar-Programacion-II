

public class Videojuego {
    private String nombre;
    private String plataforma;
    private int cantidadDeJugadores;


    public String getnombre(){
        return nombre;
    }
    public Videojuego(String nombre, String plataforma) {
        this.nombre = nombre;
        this.plataforma = plataforma;
        this.cantidadDeJugadores = 1;
    }

    public Videojuego(String nombre, String plataforma, int cantidadDeJugadores) {
        this.nombre = nombre;
        this.plataforma = plataforma;
        this.cantidadDeJugadores = cantidadDeJugadores;
    }



    public void mostrarInformacion() {
        System.out.println("Videojuego: " + this.nombre);
        System.out.println("Plataforma: " + this.plataforma);
        System.out.println("Cantidad de Jugadores: " + this.cantidadDeJugadores);
        System.out.println("............................");
    }


    public void agregarJugadores() {
        this.cantidadDeJugadores++;
        System.out.println("Se ha agregado un jugador total jugadores: " + this.cantidadDeJugadores);
    }

    public void agregarJugadores(int cantidad) {
        this.cantidadDeJugadores=cantidad+this.cantidadDeJugadores;
        System.out.println("Se han agregado " + cantidad + " jugadores. Total jugadores: " + this.cantidadDeJugadores);
    }



}



import java.util.Scanner;
public class Main {
    public static void main(String[] args) {


        Videojuego juego1 = new Videojuego("projetc zomboid", "psp");
        Videojuego juego2 = new Videojuego("warzone", "PC", 10);


        juego1.mostrarInformacion();
        juego2.mostrarInformacion();



        juego1.agregarJugadores();
        juego2.agregarJugadores(5);


        juego1.mostrarInformacion();
        juego2.mostrarInformacion();



        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingrese la cantidad de jugadores a agregar a " + juego1.getnombre() + ": ");
        int cantidadJugadores = scanner.nextInt();
        juego1.agregarJugadores(cantidadJugadores);
        juego1.mostrarInformacion();
    }
}

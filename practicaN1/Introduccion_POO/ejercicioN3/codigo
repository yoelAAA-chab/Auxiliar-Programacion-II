public class Producto {
    private String nombre;
    private double precio;
    private int stock;

    public Producto(String nombre,double precio,int stock){
        this.nombre=nombre;
        this.precio=precio;
        this.stock=stock;
    }

    public String getnombre(){
        return nombre;
    }
    public double getprecio(){
        return precio;
    }
    public int getstock(){
        return stock;
    }



    public void setNombre(String nombre){
        this.nombre=nombre;
    }
    public void setprecio(double precio){
        this.precio=precio;
    }
    public void setstrck(int stock){
        this.precio=stock;
    }


    public void vender(int catidad){
        if (stock<catidad){
            System.out.println("es cantidad sobrepasa el stock");
        }else{
            stock=stock-catidad;
        }
        System.out.println("vender stock:"+stock);
    }


    public void restableser(int cantidad){
        stock=stock+cantidad;
        System.out.println("restablese stock: "+stock);
    }

}



public class Main {
    public static void main(String[] args) {

        Producto manzana = new Producto("Manzanas", 12, 30);

        manzana.vender(12);
        manzana.restableser(22);
    }
}
